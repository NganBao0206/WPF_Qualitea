                                <Image Source="asset/icons/users.png" />
                            </Border>
                            <Border Grid.Column="1" Padding="10 0 0 0">
                                <TextBlock Text="Nhân viên" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource regularFont}" />
                            </Border>
