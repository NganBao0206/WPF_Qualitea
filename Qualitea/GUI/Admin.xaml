                                                <Wpf:Axis LabelsRotation="0" x:Name="axisX1" Position="LeftBottom">
                                                    <Wpf:Axis.Separator>
                                                        <Wpf:Separator Step="1"></Wpf:Separator>
                                                    </Wpf:Axis.Separator>
                                                </Wpf:Axis>
                                            </Wpf:CartesianChart.AxisX>
                                            <Wpf:CartesianChart.AxisY>
                                                <Wpf:Axis x:Name="axisY1" Position="LeftBottom">
                                                    <Wpf:Axis.Separator>
                                                        <Wpf:Separator></Wpf:Separator>
                                                    </Wpf:Axis.Separator>
                                                </Wpf:Axis>
                                            </Wpf:CartesianChart.AxisY>
                                        </Wpf:CartesianChart>
                                    </Border>
