                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100" />
                                        <RowDefinition Height="40" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.ColumnSpan="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.6*" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Style="{StaticResource containTextBox}" CornerRadius="5" Height="50" Margin="0" Padding="0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="50" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="searchOrderBox" Style="{StaticResource myTextBox}" Margin="10 0" KeyDown="filterName_KeyDown" TextChanged="searchOrderBox_TextChanged" />
                                                <Image Grid.Column="1" Source="asset/icons/search.png" HorizontalAlignment="Right" Width="30" Margin="10" />
                                            </Grid>
                                        </Border>
                                        <Border x:Name="dateSelector" Style="{StaticResource containTextBox}" CornerRadius="5" Margin="20 10 10 10" Height="50" Grid.Column="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="5" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Ngày lập" Style="{StaticResource darkFont}" VerticalAlignment="Center" Margin="10 0 10 0" />
                                                <Rectangle Grid.Column="1" Fill="#555" Width="5" Height="30" />
                                                <Border Grid.Column="2" Grid.Row="2" Height="50">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="auto" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Từ:" Style="{StaticResource darkFont}" VerticalAlignment="Center" Margin="10 0 0 0" />
                                                        <DatePicker Grid.Column="1" x:Name="minDate" Style="{DynamicResource myDatePickerBlack}" CalendarStyle="{DynamicResource myCalendar}" VerticalAlignment="Center" Margin="5" SelectedDateChanged="date_SelectedDateChange" />
