                                                        <DatePicker Grid.Column="3" x:Name="maxDate" Style="{DynamicResource myDatePickerBlack}" CalendarStyle="{DynamicResource myCalendar}" VerticalAlignment="Center" Margin="5" SelectedDateChanged="date_SelectedDateChange" />
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.ColumnSpan="3" Grid.Row="1" VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="30" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Trạng thái hóa đơn: " VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" Style="{StaticResource myFont}" />
                                        <RadioButton x:Name="radAll" IsChecked="True" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" GroupName="Status" Content="Tất cả" FontSize="14" Checked="radAll_Checked" />
