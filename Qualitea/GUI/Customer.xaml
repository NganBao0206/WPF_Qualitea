                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" HorizontalAlignment="Center" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="menuItem_Click">
                                        <TextBlock Style="{StaticResource greenFont}" Text="Home" />
                                    </Border>
                                    <Border x:Name="btn2" Grid.Column="1" HorizontalAlignment="Center" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="menuItem_Click">
                                        <TextBlock Style="{StaticResource darkFont}" Text="Đặt hàng" />
                                    </Border>
                                    <Border Grid.Column="2" HorizontalAlignment="Center" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="menuItem_Click">
                                        <TextBlock Style="{StaticResource darkFont}" Text="Đơn hàng" />
                                    </Border>
                                    <Border Grid.Column="3" HorizontalAlignment="Center" Cursor="Hand" VerticalAlignment="Center" MouseLeftButtonDown="menuItem_Click">
