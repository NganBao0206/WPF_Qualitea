                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="1.4*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <TextBlock Text="CHÀO MỪNG ĐẾN VỚI QUALITEA" Style="{StaticResource regularFont}" FontSize="55" TextWrapping="WrapWithOverflow" Padding="30" VerticalAlignment="Center" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Border>
                                        <Image Source="{Binding Image}" Margin="-100 0" />
                                    </Border>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="1" VerticalAlignment="Center">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" Style="{StaticResource Title}" FontSize="40" Padding="0 10" />
                                            <TextBlock Text="{Binding MinPrice, StringFormat='Giá từ {0:N0}đ'}" Style="{StaticResource darkFont}" Padding="0 0" />
                                            <Button Content="Đặt ngay" Style="{StaticResource  SignInButton}" HorizontalAlignment="Left" x:Name="bookProduct" Click="bookProduct_Click" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Grid>

                        </Grid>
                        <Grid Grid.Row="1" x:Name="tab2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border Background="#FF53825E" CornerRadius="0 0 0 5" />
                                <Border Grid.Column="1" Background="#FFF1F1F1">
                                </Border>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid x:Name="mainProduct">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="3*" />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.ColumnSpan="2" Grid.RowSpan="5" Background="#FF53825E" Panel.ZIndex="1" x:Name="beforeChoose" CornerRadius="0 0 0 5">
                                        <TextBlock Text="Mời bạn chọn thức uống" Style="{StaticResource regularFont}" FontSize="55" TextWrapping="WrapWithOverflow" Padding="30" VerticalAlignment="Center" />
                                    </Border>
                                    <Border Grid.ColumnSpan="2" Grid.RowSpan="5" Background="#FF53825E" Panel.ZIndex="0" CornerRadius="0 0 0 5">
                                    </Border>
                                    <Border Grid.Row="1">
