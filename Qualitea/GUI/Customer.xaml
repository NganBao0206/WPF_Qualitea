                                                    <TextBlock Grid.Column="1" Text="{Binding Path=ShipInfo.ReceiverName}" Style="{StaticResource darkFont}" />
                                                </Grid>
                                                <Grid Grid.Row="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.7*"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="Địa chỉ nhận: " Style="{StaticResource greenFont}" TextDecorations="None" />
