                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border Background="#FF53825E" CornerRadius="0 0 0 5" />
                                <Border Grid.Column="1" Background="#FFF1F1F1">
                                </Border>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Border x:Name="mainOrder">
                                    <Grid>
                                        <Border Grid.ColumnSpan="2" Grid.RowSpan="8" Panel.ZIndex="1" CornerRadius="0 0 0 5" Background="#FF53825E" x:Name="beforeOrderView">
