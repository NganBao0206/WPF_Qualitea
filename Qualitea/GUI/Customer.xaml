                                                    <TextBlock Grid.Column="1" Text="{Binding Path=ShipInfo.ReceiverPhone}" Style="{StaticResource darkFont}" />
                                                </Grid>
                                                <Grid Grid.Row="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.7*"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="Thanh toán" Style="{StaticResource greenFont}" TextDecorations="None" />
                                                    <TextBlock Grid.Column="1" Text="{Binding Path=Cash, StringFormat={}{0:N0}đ}" Style="{StaticResource darkFont}" />
                                                </Grid>
                                                <Grid Grid.Row="6">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="25" />
                                                        <RowDefinition />
