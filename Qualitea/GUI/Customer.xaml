                                            <ItemsControl x:Name="userOrder" x:FieldModifier="public" Padding="0 0 0 0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="15" CornerRadius="5" Background="#fff" BorderBrush="#CCC" BorderThickness="1" Margin="50 10" MouseLeftButtonDown="showOrder" HorizontalAlignment="Center">
                                                            <Grid Width="500" Height="100">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition />
                                                                    <RowDefinition />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <TextBlock Text="Mã hóa đơn:" Style="{StaticResource darkFont}"></TextBlock>
                                                                <TextBlock Text="{Binding Path=OrderHeaderID}" Grid.Column="1" Style="{StaticResource darkFont}" />
                                                                <TextBlock Text="Đơn giá:" Style="{StaticResource darkFont}" Grid.Row="1" />
                                                                <TextBlock Text="{Binding Path=Cash, StringFormat={}{0:N0}đ}" Grid.Column="1" Grid.Row="1" Style="{StaticResource darkFont}" />
                                                                <TextBlock Text="Thời gian đặt: " Style="{StaticResource darkFont}" Grid.Row="2" />
                                                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=OrderDate, StringFormat={}{0:hh\\hmm d/M/yyyy}}" Style="{StaticResource darkFont}" />

