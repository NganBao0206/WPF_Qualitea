                                                                        <DataTemplate>
                                                                            <Border Padding="0 3">
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="1.5*" />
                                                                                        <ColumnDefinition Width="0.5*" />
                                                                                        <ColumnDefinition />
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <Border Grid.Column="0">
                                                                                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                                                            <TextBlock Text="{Binding Path=ProductOption.Product.Name}" Style="{StaticResource darkFont}" />
                                                                                            <TextBlock Text="{Binding Path=ProductOption.Size.Name }" Style="{StaticResource darkFont}" />
                                                                                        </StackPanel>
                                                                                    </Border>
                                                                                    <Border Grid.Column="1" VerticalAlignment="Center">
                                                                                        <TextBlock Text="{Binding Path=Quantity, StringFormat=x{0} }" Style="{StaticResource darkFont}" HorizontalAlignment="Center" />
                                                                                    </Border>
                                                                                    <Border Grid.Column="2" VerticalAlignment="Center">
                                                                                        <TextBlock Grid.Column="0" Text="{Binding Path=_totalLine, StringFormat={}{0:N0}đ}" VerticalAlignment="Center" Style="{StaticResource darkFont}" HorizontalAlignment="Center" />
                                                                                    </Border>
                                                                                </Grid>
                                                                            </Border>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </Border>

                                                </Grid>
                                                <Grid Grid.Row="7" VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.7*"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="TRẠNG THÁI:" Style="{StaticResource greenFont}" TextDecorations="None" />
                                                    <TextBlock Grid.Column="1" Text="{Binding Path=StatusString}" Style="{StaticResource darkFont}" />
