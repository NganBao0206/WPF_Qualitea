                                                <Button Grid.Row="8" Content="Hủy đơn" Cursor="Hand" Style="{StaticResource GreenButton}" Background="#FF53825E" Margin="0 10 0 0" Foreground="#FFF" />
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    
