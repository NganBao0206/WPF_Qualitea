                                        <TextBlock Style="{StaticResource darkFont}" Text="Đăng xuất" />
                                    </Border>
                                </Grid>

                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" x:Name="tab1" Panel.ZIndex="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border Background="#FF53825E" CornerRadius="0 0 0 5" />
                                <Border Grid.Column="1" Background="#FFF1F1F1">
                                </Border>
                            </Grid>
                            <Grid x:Name="firstProduct">
