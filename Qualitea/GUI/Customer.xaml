                                                    <TextBlock Text="Thời gian đặt: " Style="{StaticResource greenFont}" TextDecorations="None" />
                                                    <TextBlock Grid.Column="1" Text="{Binding Path=OrderDate, StringFormat={}{0:hh\\hmm d/M/yyyy}}" Style="{StaticResource darkFont}" />
                                                </Grid>
                                                <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.7*"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
