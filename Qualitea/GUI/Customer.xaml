                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border Background="#FF53825E" CornerRadius="0 0 0 5" />
                                <Border Grid.Column="1" Background="#FFF1F1F1">
                                </Border>
                            </Grid>
                            <Grid>
                                <Border VerticalAlignment="Center" HorizontalAlignment="Center">
