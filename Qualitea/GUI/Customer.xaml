                                        <TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center" Style="{StaticResource regularFont}" FontSize="40" TextWrapping="WrapWithOverflow" x:Name="nameMainPrd" />
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Padding="10">
                                        <TextBlock Text="{Binding Path=MinPrice, StringFormat= {}{0:N0}đ}" VerticalAlignment="Center" Style="{StaticResource regularFont}" FontSize="30" TextWrapping="WrapWithOverflow" x:Name="priceMainPrd" />
                                    </Border>
                                    <ItemsControl Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="optionMainPrd" ItemsSource="{Binding Path=ProductOptionsActive}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="White" BorderThickness="2" Padding="10" Margin="5 0" CornerRadius="5" Cursor="Hand" Width="50" Height="50" HorizontalAlignment="Center" MouseLeftButtonDown="ProductOption_Selected">
                                                    <TextBlock Text="{Binding Path=Size}" Style="{StaticResource regularFont}" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                    <Border Grid.Row="3" Padding="40 0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Button Content="-" Style="{StaticResource myRoundBtn}" Width="50" Height="50" x:Name="minus" Click="minus_Click" />
                                            <TextBox Grid.Column="1" Style="{StaticResource myTextBox}" Foreground="white" Text="1" Margin="0" HorizontalAlignment="Center" x:Name="quantity" PreviewTextInput="quantity_PreviewTextInput" TextChanged="quantity_TextChanged" />
                                            <Button Grid.Column="2" Content="+" Style="{StaticResource myRoundBtn}" Width="50" Height="50" x:Name="plus" Click="plus_Click" />
                                        </Grid>
                                    </Border>
                                    <Button Content="Thêm vào giỏ" Grid.Row="3" Grid.Column="1" Style="{StaticResource myBtn}" Margin="0 10 40 10" x:Name="addToCard" Click="addToCard_Click" />
                                </Grid>
                                <Border Grid.Column="1" Background="#FFF1F1F1" CornerRadius="0 0 30 0" Panel.ZIndex="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="80" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="400" />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Row="0" x:Name="comboBoxCategory" Style="{StaticResource ComboBoxStyle3}" SelectedValuePath="CategoryID" DisplayMemberPath="Name" Grid.Column="0" Margin="15" FontFamily="/Qualitea;component/fonts/#Montserrat Medium" Height="50" VerticalAlignment="Center" Padding="15 15 0 0" SelectionChanged="comboBoxCategory_SelectionChanged" />

                                        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource containTextBox}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox Style="{StaticResource myTextBox}" Margin="10 0 0 0" Width="305" x:Name="searchBoxProduct" TextChanged="searchBoxProduct_TextChanged" />
                                                <Image Source="asset/icons/search.png" Margin="10" />
                                            </StackPanel>
                                        </Border>
                                        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="20 0 0 0">
                                            <StackPanel>
                                                <ItemsControl x:Name="listProduct" x:FieldModifier="public" Padding="0 0 0 0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border x:Name="productBox" CornerRadius="20 20 10 10" Padding="10" Width="170" Margin="10 100 0 -20" Background="#FFE9EADC">
                                                                <StackPanel>
                                                                    <Border>
                                                                        <Image Source="{Binding Path=Image}" Height="150" Margin="0 -80 0 5">
                                                                            <Image.Effect>
                                                                                <DropShadowEffect Direction="245" Color="#00DADADA" ShadowDepth="5" BlurRadius="20" />
                                                                            </Image.Effect>
                                                                        </Image>
                                                                    </Border>
                                                                    <TextBlock Text="{Binding Path=Name}" TextTrimming="CharacterEllipsis" Margin="0 10 0 2" Style="{StaticResource darkFont}" Typography.Capitals="AllSmallCaps" FontSize="20" />
                                                                    <TextBlock x:Name="PriceText" Text="{Binding Path=MinPrice, StringFormat= {}{0:N0}đ}" Style="{StaticResource darkFont}" FontSize="16" />
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Background="#FF53825E" CornerRadius="5" Margin="0 5 0 0" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="5" Cursor="Hand" MouseLeftButtonDown="Product_Selected">
                                                                            <TextBlock Text="Chọn" Style="{StaticResource regularFont}" HorizontalAlignment="Center" />
                                                                        </Border>
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Border Grid.Row="1" Width="40" Margin="0 0 10 10" Panel.ZIndex="99" VerticalAlignment="Bottom" HorizontalAlignment="Right" Cursor="Hand" MouseLeftButtonDown="showCart">
                                <Image Source="/asset/icons/bag.png" />
                            </Border>
                        </Grid>
