                                                <TextBlock Text="{Binding Path=DOB, StringFormat={}{0:d/M/yyyy}}" Style="{StaticResource darkFont}" Foreground="#FF53825E" />
                                            </StackPanel>
                                        </Grid>

                                    </Border>
                                </Border>
                            </Grid>
                            
                        </Grid>

