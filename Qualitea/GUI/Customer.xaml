                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition Height="3*" />
                                                    <RowDefinition />
                                                    <RowDefinition Height="1.2*"/>
                                                </Grid.RowDefinitions>


                                                <Grid Background="White">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.7*"/>
                                                        <ColumnDefinition />
