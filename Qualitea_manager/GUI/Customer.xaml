                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="50" />
                                            <RowDefinition Height="80" />
                                            <RowDefinition Height="80" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="1" Padding="5" Background="#FF53825E" Margin="50 5 0 5" CornerRadius="10 0 0 10">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Margin="10 0 0 0" Text="Điểm của bạn: " Style="{StaticResource regularFont}" />
                                                <TextBlock Text="{Binding Path=Score}" Style="{StaticResource regularFont}" x:Name="userPoint" />
                                            </StackPanel>
                                        </Border>
                                        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource containTextBox}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBox x:Name="searchNameVoucher" Style="{StaticResource myTextBox}" Margin="10 0 0 0" MinWidth="500" TextChanged="txtVoucher_TextChanged" />
                                                <Image Source="asset/icons/search.png" Margin="10" />
                                            </StackPanel>
                                        </Border>
                                        <Border Grid.Column="2" Grid.Row="2" Style="{StaticResource containTextBox}" Margin="15 10" Height="50" Padding="0 0 10 0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="% Giảm:" Style="{StaticResource darkFont}" VerticalAlignment="Center" Margin="10 0 0 0" />
                                                <TextBox Grid.Column="1" x:Name="minPer" Style="{StaticResource myTextBox}" BorderThickness="0 0 0 1" BorderBrush="#FF434948" Width="70" Margin="5 0" TextChanged="txtVoucher_TextChanged" />
                                                <TextBlock Grid.Column="2" Text="% - " Style="{StaticResource darkFont}" VerticalAlignment="Center" />
                                                <TextBox Grid.Column="3" x:Name="maxPer" Style="{StaticResource myTextBox}" BorderThickness="0 0 0 1" BorderBrush="#FF434948" Width="70" Margin="5 0" TextChanged="txtVoucher_TextChanged" />
                                                <TextBlock Grid.Column="4" Text="%" Style="{StaticResource darkFont}" VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                        <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource containTextBox}" Margin="15 10" Height="50">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Điểm:" Style="{StaticResource darkFont}" VerticalAlignment="Center" Margin="10 0 0 0" />
                                                <TextBox Grid.Column="1" x:Name="minPoint" Style="{StaticResource myTextBox}" BorderThickness="0 0 0 1" BorderBrush="#FF434948" MinWidth="45" Margin="10 0" TextChanged="txtVoucher_TextChanged" />
                                                <TextBlock Grid.Column="2" Text=" - " Style="{StaticResource darkFont}" VerticalAlignment="Center" />
                                                <TextBox Grid.Column="3" x:Name="maxPoint" Style="{StaticResource myTextBox}" BorderThickness="0 0 0 1" BorderBrush="#FF434948" MinWidth="45" Margin="10 0" TextChanged="txtVoucher_TextChanged" />
                                            </Grid>
                                        </Border>
                                        <ScrollViewer Grid.Row="3" Grid.ColumnSpan="2" Margin="20 0 0 0">
                                            <StackPanel>
                                                <ItemsControl x:Name="listVoucher" x:FieldModifier="public" Padding="0 0 0 0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Width="300" Height="150" Margin="0 10" Background="#FF434948" Padding="15" Cursor="Hand" MouseLeftButtonDown="ShowDetailVoucher">
                                                                <Border Background="#FFF1F1F1" Padding="3">
                                                                    <Border Background="#FFBAD373">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="1.2*" />
                                                                                <ColumnDefinition Width="114" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <StackPanel Margin="0 10">
                                                                                <Border Width="30">
                                                                                    <Image Source="/asset/logo/darkline.png" />
                                                                                </Border>
                                                                                <TextBlock Text="___GIFT___ VOUCHER" Style="{StaticResource darkFont}" TextWrapping="Wrap" Width="100" TextAlignment="Center" Padding="0 10" />
                                                                            </StackPanel>
                                                                            <Border Grid.Column="1" Padding="5">
                                                                                <Border Background="#FFFBFF98" CornerRadius="100" Padding=" 3">
                                                                                    <Border BorderBrush="#FF434948" BorderThickness="1" CornerRadius="100">
                                                                                        <TextBlock Text="{Binding Path=PercentageDiscount, StringFormat={}{0:P0}}" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource darkFont}" FontSize="35" />
                                                                                    </Border>
                                                                                </Border>
                                                                            </Border>
                                                                        </Grid>
                                                                    </Border>
                                                                </Border>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </Border >
                            </Grid>
                        </Grid>
                        
                        <Grid Grid.Row="1" x:Name="tabCart" Visibility="Hidden" Background="#FFF1F1F1" Panel.ZIndex="9">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="400" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Width="50" Height="50" Padding="10" MouseLeftButtonDown="hideCart" VerticalAlignment="Top" HorizontalAlignment="Left">
                                    <Image Source="/asset/icons/back.png" />
                                </Border>
                                <StackPanel Margin="70 50 50 0" Grid.Row="0" Grid.ColumnSpan="2">
                                    <Border Height="30" Margin="0 0 20 0" BorderThickness="0 0 0 1" BorderBrush="#FF434948" Padding="0 0 0 10">
                                        <Grid VerticalAlignment="Bottom">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="1.5*" />
                                                <ColumnDefinition Width="0.5*" MinWidth="150" />
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="0.2*" MinWidth="80" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.ColumnSpan="2" HorizontalAlignment="Center">
                                                <TextBlock Text="Sản phẩm" Style="{StaticResource darkFont}" />
                                            </Border>
                                            <Border Grid.Column="2" HorizontalAlignment="Center">
                                                <TextBlock Text="Số lượng" Style="{StaticResource darkFont}" />
                                            </Border>
                                            <Border Grid.Column="3" HorizontalAlignment="Center">
                                                <TextBlock Text="Thành tiền" Style="{StaticResource darkFont}" />
                                            </Border>
                                            <Border Grid.Column="4" HorizontalAlignment="Center">
                                                <TextBlock Text="Xóa" Style="{StaticResource darkFont}" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <ScrollViewer Height="320">
                                        <StackPanel>
                                            <ItemsControl x:Name="cart" x:FieldModifier="public" Padding="0 0 0 0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Height="100" BorderThickness="0 0 0 1" BorderBrush="#FF434948">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="100" />
                                                                    <ColumnDefinition Width="1.5*" />
                                                                    <ColumnDefinition Width="0.5*" MinWidth="150" />
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition Width="0.2*" MinWidth="80" />
                                                                </Grid.ColumnDefinitions>
                                                                <Border Padding="20">
                                                                    <Image Source="{Binding Path=ProductOption.Product.Image}">
                                                                        <Image.Effect>
                                                                            <DropShadowEffect Direction="245" Color="#00DADADA" ShadowDepth="1" BlurRadius="20" />
                                                                        </Image.Effect>
                                                                    </Image>
                                                                </Border>
                                                                <Border Grid.Column="1">
                                                                    <StackPanel VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding Path=ProductOption.Product.Name}" Style="{StaticResource darkFont}" FontSize="25" />
                                                                        <TextBlock Text="{Binding Path=ProductOption.Size.Name, StringFormat=Size {0}}" Style="{StaticResource myFont}" Foreground="#FF53825E" />
                                                                    </StackPanel>
                                                                </Border>
                                                                <Border Grid.Column="2">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition />
                                                                            <ColumnDefinition />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <Button Content="-" Style="{StaticResource myDarkRoundBtn}" Width="25" Height="25" x:Name="minusCart" Click="minusCart_Click" Padding="0" />
                                                                        <TextBox Grid.Column="1" Style="{StaticResource myTextBox}" Text="{Binding Quantity}" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="quantity" PreviewTextInput="quantity_PreviewTextInput" TextChanged="quantity_TextChanged" />
                                                                        <Button Grid.Column="2" Content="+" Style="{StaticResource myDarkRoundBtn}" Width="25" Height="25" x:Name="plusCart" Padding="0" Click="plusCart_Click" />
                                                                    </Grid>
                                                                </Border>
                                                                <Border Grid.Column="3">
                                                                    <TextBlock Grid.Column="0" Text="{Binding Path=_totalLine, StringFormat={}{0:N0}đ}" VerticalAlignment="Center" Style="{StaticResource darkFont}" HorizontalAlignment="Center" FontSize="20" />
                                                                </Border>
                                                                <Border Grid.Column="4">
                                                                    <Border Grid.Column="2" Width="30" Height="30" BorderBrush="{x:Null}" CornerRadius="10" Padding="5" Cursor="Hand" Margin="8" MouseLeftButtonDown="Delete">
                                                                        <Image Source="asset/icons/delete.png" />
                                                                    </Border>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </ScrollViewer>
                                </StackPanel>
                                <StackPanel Margin="70 0 70 0" Grid.Row="1">
                                    <Grid Margin="0 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Padding="10" Margin="10" CornerRadius="5" BorderThickness="1" BorderBrush="#FF434948">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Style="{StaticResource darkFont}" Text="Tổng tiền:" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Style="{StaticResource darkFont}" HorizontalAlignment="Right" Padding="0 5" Text="0đ" x:Name="txtTotal" />
                                            </Grid>
                                        </Border>
                                        <Border Padding="10" Margin="10" Grid.Column="1" CornerRadius="5" BorderThickness="1" BorderBrush="#FF434948">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Style="{StaticResource darkFont}" Text="Tiền giảm:" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Style="{StaticResource darkFont}" HorizontalAlignment="Right" Padding="0 5" Text="0đ" x:Name="txtDiscount" />
                                            </Grid>
                                        </Border>
                                        <Border Padding="10" Margin="10" Grid.Column="2" CornerRadius="5" BorderThickness="1" BorderBrush="#FF434948" Background="#FF434948">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Style="{StaticResource darkFont}" Foreground="white" Text="Thanh toán:" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Style="{StaticResource darkFont}" Foreground="white" HorizontalAlignment="Right" Padding="0 5" Text="0đ" x:Name="txtCash" />
                                            </Grid>
                                        </Border>

                                    </Grid>
                                    <Grid Margin="10 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Style="{StaticResource darkFont}" Text="Voucher:" VerticalAlignment="Center" />
                                        <Border Grid.Column="1" Padding="5">
                                            <ComboBox Style="{StaticResource ComboBoxStyle3}" IsEditable="true" Padding="10" x:Name="userCoupon" SelectionChanged="userCoupon_SelectionChanged" />
                                        </Border>
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Background="#aaa" Margin="10" Padding="10" CornerRadius="5" x:Name="cancelCart">
                                            <TextBlock Text="Hủy bỏ" Style="{StaticResource regularFont}" HorizontalAlignment="Center" Padding="0 5" />
                                        </Border>
                                        <Border Grid.Column="1" Background="#FF53825E" Margin="10" Grid.ColumnSpan="2" Padding="10" CornerRadius="5" x:Name="continuePay" MouseLeftButtonDown="continuePay_MouseLeftButtonDown">
                                            <TextBlock Text="Tiếp tục" Style="{StaticResource regularFont}" HorizontalAlignment="Center" Padding="0 5" />
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1" x:Name="tabConfirm" Visibility="Hidden" Background="#FFF1F1F1" Panel.ZIndex="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border Width="50" Height="50" Padding="10" VerticalAlignment="Top" HorizontalAlignment="Left" MouseLeftButtonDown="backToCart">
                                    <Image Source="/asset/icons/back.png" />
                                </Border>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Border Padding="50">
                                        <Border Background="#FFF" CornerRadius="5">
                                            <StackPanel>
                                                <TextBlock Style="{StaticResource Title}" HorizontalAlignment="Center" Text="Thông tin giao hàng" />
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="Tên người nhận: " Style="{StaticResource darkFont}" Margin="20 10" />
                                                        <Border Margin="20 0" Padding="5" BorderBrush="#FF434948" BorderThickness="1" CornerRadius="5">
                                                            <TextBox Style="{StaticResource  myTextBox}" x:Name="receiverName"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="1">
                                                        <TextBlock Text="Địa chỉ nhận: " Style="{StaticResource darkFont}" Margin="20 10" />
                                                        <Border Margin="20 0" Padding="5" BorderBrush="#FF434948" BorderThickness="1" CornerRadius="5">
                                                            <TextBox Style="{StaticResource  myTextBox}" x:Name="receiverAddress" />
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="2">
                                                        <TextBlock Text="Số điện thoại: " Style="{StaticResource darkFont}" Margin="20 10" />
                                                        <Border Margin="20 0" Padding="5" BorderBrush="#FF434948" BorderThickness="1" CornerRadius="5">
                                                            <TextBox Style="{StaticResource  myTextBox}" x:Name="receiverPhone"/>
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </Border>
                                    <Border Padding="50" Grid.Column="1">
                                        <Border Background="#FFF" CornerRadius="5" Padding="10">
