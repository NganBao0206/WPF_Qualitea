                                                <ScrollViewer Height="auto" MinHeight="100" MaxHeight="150" VerticalAlignment="Top">
                                                    <StackPanel>
                                                        <ItemsControl x:Name="bill" x:FieldModifier="public" Padding="0 0 0 0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Border Padding="0 3">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="1.5*" />
                                                                                <ColumnDefinition Width="0.5*" />
                                                                                <ColumnDefinition />
                                                                            </Grid.ColumnDefinitions>
                                                                            <Border Grid.Column="0">
                                                                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                                                    <TextBlock Text="{Binding Path=ProductOption.Product.Name}" Style="{StaticResource darkFont}" />
                                                                                    <TextBlock Text="{Binding Path=ProductOption.Size.Name }" Style="{StaticResource darkFont}" />
                                                                                </StackPanel>
                                                                            </Border>
                                                                            <Border Grid.Column="1" VerticalAlignment="Center">
                                                                                <TextBlock Text="{Binding Path=Quantity, StringFormat=x{0} }" Style="{StaticResource darkFont}" HorizontalAlignment="Center" />
                                                                            </Border>
                                                                            <Border Grid.Column="2" VerticalAlignment="Center">
                                                                                <TextBlock Grid.Column="0" Text="{Binding Path=_totalLine, StringFormat={}{0:N0}đ}" VerticalAlignment="Center" Style="{StaticResource darkFont}" HorizontalAlignment="Center" />
                                                                            </Border>
                                                                        </Grid>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </ScrollViewer>
                                                <Border Padding="10" Margin="10" CornerRadius="5" BorderThickness="1" BorderBrush="#FF434948">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Style="{StaticResource darkFont}" Text="Tổng tiền:" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="1" Style="{StaticResource darkFont}" HorizontalAlignment="Right" Padding="0 5" Text="0đ" x:Name="billTotal" />
                                                    </Grid>
                                                </Border>
                                                <Border Padding="10" Margin="10" CornerRadius="5" BorderThickness="1" BorderBrush="#FF434948">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Style="{StaticResource darkFont}" Text="Tổng tiền:" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="1" Style="{StaticResource darkFont}" HorizontalAlignment="Right" Padding="0 5" Text="0đ" x:Name="billDiscount" />
                                                    </Grid>
                                                </Border>
                                                <Border Padding="10" Margin="10" CornerRadius="5" BorderThickness="1" BorderBrush="#FF434948" Background="#FF434948">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Style="{StaticResource darkFont}" Foreground="white" Text="Thanh toán:" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="1" Style="{StaticResource darkFont}" Foreground="white" HorizontalAlignment="Right" Padding="0 5" Text="0đ" x:Name="billCash" />
                                                    </Grid>
                                                </Border>
                                                <Border Background="#FF53825E" Margin="10" Padding="10" CornerRadius="5" x:Name="confirmBtn" Cursor="Hand" MouseLeftButtonDown="confirmBill">
                                                    <TextBlock Text="Xác nhận" Style="{StaticResource regularFont}" HorizontalAlignment="Center" Padding="0 5" />
                                                </Border>
                                            </StackPanel>
                                            
                                        </Border>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Grid>

                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
